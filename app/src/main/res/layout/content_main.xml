<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="visionstech.menulearn.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/m"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_marginBottom="84dp"
        android:id="@+id/edPhoneNum"
        android:layout_alignBottom="@+id/but2"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="Enter Your Phone Number"/>


    <Button
        android:text="Open Restaurant Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restbut"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp" />

    <Button
        android:text="Open Page Three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/but3"
        android:textSize="30dp"
        android:layout_above="@+id/restbut"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp" />

    <Button
        android:text="Open Page Two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/but2"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/but3"
        android:layout_alignLeft="@+id/but3"
        android:layout_alignStart="@+id/but3"
        android:layout_marginBottom="77dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_above="@+id/edPhoneNum"
        android:layout_alignRight="@+id/edPhoneNum"
        android:layout_alignEnd="@+id/edPhoneNum"
        android:id="@+id/edName"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="Enter Your Name"/>

</RelativeLayout>
